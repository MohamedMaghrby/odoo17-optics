{
    "version": "0.2.0",
    "configurations": [        
        {
            "name": "Odoo",
            "type":"python",
            "request":"launch",
            "stopOnEntry": false,
            "python":"${command:python.interpreterPath}",
            "console":"integratedTerminal",
            "program":"${workspaceRoot}/odoo/odoo-bin",
            "args": [
               "--config=odoo/odoo.conf",
            ],
            "cwd":"${workspaceRoot}",
            "env": {},
            "envFile":"${workspaceRoot}/.env",
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}


