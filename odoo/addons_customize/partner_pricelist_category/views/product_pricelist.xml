<odoo>
    <data>
        <record id="product_pricelist_view_inherit" model="ir.ui.view">
            <field name="name">product.pricelist.form.inherit</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='pricelist_discounts']" position="after">
                    <group name="customer_category" string="Customer Category" colspan='6'>
                        <field name="category_pricelist_ids" widget="many2many_tags" string="Category"
                               options="{'no_create_edit': True}"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
